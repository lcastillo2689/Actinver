SELECT 
tbe.evaluacion_id,
    TBC.NUM_EMPLEADO                                                            AS "# EMPLEADO", 
    TBC.NOMBRE                                                                  AS "NOMBRE",         
    TBC.PUESTO,
    TBJ.NUM_EMPLEADO                                                            AS "# JEFE",
    TBJ.NOMBRE                                                                  AS "LÍDER/EVALUADOR",
    FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID)                                AS "CALIFICACIÓN DE OBJETIVOS",
    fn_calificacion_valores(TBE.EVALUACION_ID)                                  AS "CALIFIACIÓN DE COMPORTAMIENTOS",
    sum(FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID) + fn_calificacion_valores(TBE.EVALUACION_ID))       AS "TOTAL",
  
     CASE WHEN  sum(FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID) + fn_calificacion_valores(TBE.EVALUACION_ID))  >= 3.60 
        THEN  'EXCEPCIONAL'
        WHEN 
           sum(FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID) + fn_calificacion_valores(TBE.EVALUACION_ID)) >= 2.60  AND  sum(FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID) + fn_calificacion_valores(TBE.EVALUACION_ID)) < 3.60
        THEN 'SOBRESALIENTE'
          WHEN 
            sum(FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID) + fn_calificacion_valores(TBE.EVALUACION_ID)) >= 1.60  AND  sum(FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID) + fn_calificacion_valores(TBE.EVALUACION_ID)) < 2.60
        THEN 'SATISFACTORIO'
          WHEN 
            sum(FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID) + fn_calificacion_valores(TBE.EVALUACION_ID)) >= 1  AND  sum(FN_CALIFICACION_OBJETIVOS(TBE.EVALUACION_ID) + fn_calificacion_valores(TBE.EVALUACION_ID)) < 1.59
        THEN 'NO CUMPLE'
        ELSE 
        'PENDIENTE'
        END                                                             AS "CALIFICACIÓN",               
      TBEC.DESCRIPCION_FORTALEZA,
    TBEC.DESCRIPCION_MEJORA
        
FROM DC_EMPLEADO                            TBC
LEFT JOIN DC_EMPLEADO_REPORTA_XREF          TBER            ON TBER.EMPLEADO_ID                 =  TBC.EMPLEADO_ID
LEFT JOIN DC_EMPLEADO                       TBJ             ON TBER.REPORTA_ID                  = TBJ.EMPLEADO_ID
LEFT JOIN DC_EMPLEADO_REPORTA_XREF          TBERJ           ON TBER.REPORTA_ID                  = TBERJ.EMPLEADO_ID
LEFT JOIN DC_EVALUACION_EMPLEADO_XREF       TBEE            ON TBEE.EMPLEADO_ID                 =  TBC.EMPLEADO_ID 
RIGHT JOIN DC_EVALUACION                    TBE             ON TBE.EVALUACION_ID                =  TBEE.EVALUACION_ID
RIGHT JOIN DC_CAT_ESTATUS_EVALUACION        TBEV            ON TBEV.ESTATUS_EVALUACION_ID       = TBE.ESTATUS_ID
RIGHT JOIN DC_CONCLUSION                    TBEC            ON TBEC.EVALUACION_ID               =  TBE.EVALUACION_ID    
WHERE   

 (TBE.ESTATUS_ID = 2 AND TBE.AUTOEVALUACION = 1)

group BY TBC.NUM_EMPLEADO,                                                          
    TBC.NOMBRE,                                                                  
    TBC.PUESTO,
    TBJ.NUM_EMPLEADO,                                                            
    TBJ.NOMBRE,
    TBE.EVALUACION_ID,
     TBEC.DESCRIPCION_FORTALEZA,
     TBEC.DESCRIPCION_MEJORA
         order by tbc.NUM_EMPLEADO;
